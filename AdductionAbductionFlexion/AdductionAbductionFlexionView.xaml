<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauges="clr-namespace:Gauges;assembly=Gauges"
             xmlns:local="clr-namespace:MyoTestv4"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MyoTestv4.AdductionAbductionFlexionView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
        <Grid HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">


            <TextBox HorizontalAlignment="Left" x:Name="statusTbx" Background="#141c28" Foreground="White" Height="25" Margin="87,10,0,0" TextWrapping="Wrap" Text="{Binding CurrentStatus}" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" x:Name="poseStatusTbx" Background="#141c28" Foreground="White" Height="24" Margin="87,53,0,0" TextWrapping="Wrap" Text="{Binding PoseStatus}" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" x:Name="degreeOfAbductionTbx" Background="#141c28" Foreground="White" Height="22" Margin="108,205,0,0" TextWrapping="Wrap" Text="{Binding DegreeStatus}" VerticalAlignment="Top" Width="110"/>
            <Label Content="Degrees:" Foreground="#00bdde" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="98"/>
            <Label Content="Painful arc start:" Foreground="#00bdde" HorizontalAlignment="Left" Margin="10,151,0,0" VerticalAlignment="Top" Width="110"/>
            <Image HorizontalAlignment="Left" Source="pack://application:,,,/Images/abduction_side_trans.png" x:Name="exerciseImage" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox HorizontalAlignment="Left" x:Name="painfulArcEndTbx" Background="#141c28" Foreground="White" Height="22" Margin="108,178,0,0" TextWrapping="Wrap" Text="{Binding EndDegreeStatus}" VerticalAlignment="Top" Width="110"/>
            <Label Content="Painful arc end:" Foreground="#00bdde" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" Width="110"/>
            <TextBox HorizontalAlignment="Left" x:Name="painfulArcStartTbx" Background="#141c28" Foreground="White" Height="23" Margin="108,151,0,0" TextWrapping="Wrap" Text="{Binding StartDegreeStatus}" VerticalAlignment="Top" Width="110"/>

            <gauges:Gauge x:Name="Gauge"
				Grid.Row="0"
				Margin="223,6,2,5"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Marker="Triangle"
				Maximum="180"
				Minimum="0"
				Placement="Left"
				ShowLabels="True"
				ShowMajorTicks="True"
				ShowTrack="True"
				TickFrequency="5"
				Value="{Binding DegreeStatus}" RenderTransformOrigin="0.5,0.5">
                <gauges:Gauge.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.065"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </gauges:Gauge.RenderTransform>
                <gauges:Gauge.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <LinearGradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Offset="0.0" Color="Red" />
                                <GradientStop Offset="0.10" Color="Red" />
                                <GradientStop Offset="0.10" Color="Green" />
                                <GradientStop Offset="0.90" Color="Green" />
                                <GradientStop Offset="0.90" Color="Red" />
                                <GradientStop Offset="1.0" Color="Red" />
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </gauges:Gauge.Background>
            </gauges:Gauge>


            <TextBlock HorizontalAlignment="Left" x:Name="repCntTblk" Margin="0,4,0,0" TextWrapping="Wrap" Text="" FontSize="38" Foreground="#00bdde" VerticalAlignment="Top" Width="34" Height="41"/>
            <Button Content="Submit" x:Name="submitBtn" Command="{Binding Path=DataSubmitCommand}" IsDefault="True" IsCancel="True" HorizontalAlignment="Left"  Background="#00bdde" Foreground="White" Margin="122,240,0,0" VerticalAlignment="Top" Width="75"/>




        </Grid>
    </Viewbox>




</UserControl>